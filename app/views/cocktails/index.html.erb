<div class="container">
  <div class="index-header-title">
    <h1>The list of our Cocktails</h1>
  </div>
  <div class="index-card-container">
      <% @cocktails.each do |cocktail| %>
        <div class="index-card-items">
          <div 
            class="
            index-cocktail-card"style="background-image: url('<%=cocktail.photo_url %>');"  
          >
          <h1 class="card-title-name"><%= cocktail.name %></h1>
          </div>
        </div>
      <% end %>
  </div>
</div>



