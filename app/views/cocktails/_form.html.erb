<div class="container">
    <div class="new-form-content mt-3">
        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :rating, :collection => 1..5 %>
        <%= f.submit class: "btn btn-primary"%>
        <% end %>
    </div>
</div>

