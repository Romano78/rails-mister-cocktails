<div class="container" id="show-container">
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="show-content-details">
                <%= image_tag "Mojito" %>
                 <div class="show-content-details">
                <h1><%  @cocktail.doses.each do |dose| %></h1>
                <h1><%= dose.description %></h1>
                <% end %>
            </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
        <div class="show-content-description">
                <h1><%  @cocktail.ingredients.each do |ingredient| %></h1>
                <li><%= ingredient.name %></li>
                <% end %>
            </div>
             <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
        </div>
        
    </div>
</div>